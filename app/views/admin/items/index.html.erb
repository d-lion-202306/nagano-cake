<div class="container mt-5">
  <div class="row">
    <div class="col-lg-12">
      <h4 class="mt-2 bg-light text-center">商品一覧</h4>
      <div class="ml-3">
        <div class="flex-row">
          <%= link_to '商品追加', new_admin_item_path %>

          <table class="table">
            <thead>
              <tr>
                <th>商品ID</th>
                <th>商品名</th>
                <th>税抜価格</th>
                <th>ジャンル</th>
                <th>ステータス</th>
              </tr>
            </thead>

            <tbody>
            <% @items.each do |item| %>
              <tr>
                <td>
                  <%= item.id %>
                </td>
                <td>
                  <%= link_to admin_item_path(item.id) do %>
                    <%= item.name %>
                  <% end %>
                </td>
                <td>
                  <%= item.non_tax_price %>
                </td>
                <td>
                  <%= item.genre.name %>
                </td>
                <td>
                  <% if item.is_active %>
                    販売中
                  <% else %>
                    販売停止中
                  <% end %>
                </td>
              </tr>
            <% end %>
            </tbody>
          </table>
          <%= paginate @items %>
        </div>
      </div>
    </div>
  </div>
</div.
