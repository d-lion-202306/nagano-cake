
    <div class="col-lg-12">
      <div class="d-flex">
      <h4 class="bg-light d-inline-block my-2 offset-1">商品一覧</h4>
      <p class="offset-9">
          <%= link_to new_admin_item_path do %>
          <i class="fa-solid fa-circle-plus fa-2xl"></i>
          <% end %>
      </p>
      </div>
      <div class="ml-3">
        <div class="flex-row">
          

          <table class="table mt-3">
            <thead>
              <tr>
                <th>商品ID</th>
                <th>商品名</th>
                <th>税抜価格</th>
                <th>ジャンル</th>
                <th>ステータス</th>
              </tr>
            </thead>

            <tbody>
            <% items.each do |item| %>
              <tr>
                <td>
                  <%= item.id %>
                </td>
                <td>
                  <%= link_to admin_item_path(item.id) do %>
                    <%= item.name %>
                  <% end %>
                </td>
                <td>
                  <%= item.non_tax_price %>
                </td>
                <td>
                  <%= item.genre.name %>
                </td>
                <td>
                  <% if item.is_active %>
                    販売中
                  <% else %>
                    販売停止中
                  <% end %>
                </td>
              </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>

