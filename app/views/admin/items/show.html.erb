<div class="container">
  <h4 class="bg-light text-center mt-4" style="width:150px">商品詳細</h3>

  <div class="col-md-9 ml-3 mx-auto">
  　<div class="row">
    　  <!--写真-->
      <div class="mr-2">
        <%= image_tag @item.get_image, size: "300x200" %>
      </div>
      <!--商品情報-->
      <div>
      <table>
        <tr>
          <th style="width:150px">商品名</th>
          <th style="width:260px"><%= @item.name %></th>
        </tr>
        <tr>
          <th>商品説明</th>
          <th><%= @item.introduction %></th>
        </tr>
        <tr>
          <th>ジャンル</th>
          <th><%= @item.genre.name %></th>
        </tr>
        <tr>
          <th>
            税込価格<br>
            (税抜価格)
          </th>
          <th>
            <%= @item.tax_price.to_s(:delimited) %>
          (<%= @item.non_tax_price %>)円
          </th>
        </tr>
        <tr>
          <th>販売ステータス</th>
          <th>
            <% if @item.is_active %>
              <P  class="my-auto text-success">販売中</P>
            <% else %>
              販売停止中
            <% end %>
          </th>
        </tr>
      </table>
      <div class="mt-3 offset-2">
        <%= link_to "編集する", edit_admin_item_path(@item.id), class:"btn btn-success" %>
      </div>
      </div>
    </div>
  </div>
</div>