<div class="container px-5 px-sm-0">
    <div style ="color:green;"><%= flash[:alert] %></div>
  <div class="row">
      <div class="row pl-5 pb-2">
          <h4 class="bg-light"><strong>注文履歴詳細</strong></h4>
      </div>
      
      <table class="container table table-borderless">
          <tbody>
           <tr class="row">
               <td class="col-3"><strong>購入者</strong></td>
               <td class="col-7">
                   <%= link_to admin_order_item_path(@order) do %>
                   <%= @order.name %>
                   <% end %>
                </td>
           </tr>
           <tr class="row">
               <td class="col-3"><strong>注文日</strong></td>
               <td class="col-9"><%= @order.created_at .strftime('%Y/%m/%d') %></td>
           </tr>
           <tr class="row">
               <td class="col-3"><strong>配送先</strong></td>
               <td class="col-9"><%= @order.post_code %>　<%= @order.address %></td>
           </tr>
           <tr class="row">
               <td class="col-3"></td>
               <td class="col-9"><%= @order.name %></td>
           </tr>
           <tr class="row">
               <td class="col-3"><strong>支払方法</strong></td>
               <td class="col-9"><%= @order.payment_method %></td>
           </tr>
           <tr class="row">
               <td class="col-3"><strong>注文ステータス</strong></td>
               <td class="col-9">
                 <%= form_with(model: @order, url: admin_order_path(@order.id), local: true, class: "form-row") do |f| %>
                    <%= f.select :order_status, Order.order_statuses_i18n.invert, class: "order_status", class:"form-control form-control-sm col-4"  %>
                    <%= f.submit "更新" , class: "btn btn-success ml-5" %>
                 <% end %>
               </td>
           </tr>
          </tbody>
       </table>
       <div class="container">
           <div class="row">
               <div class="col-7">
                   <table class ="table">
                       <tbody>
                          <tr class="bg-light">
                              <th>商品名</th>
                              <th>単価（税込）</th>
                              <th>数量</th>
                              <th>小計</th>
                              <th>制作ステータス</th>
                          </tr>
                          <% @order_items.each do |order_item| %>
                          <tr>
                            <td><%= order_item.item.name %></td>
                            <td><%= order_item.tax_price %></td>
                            <td><%= order_item.amount %></td>
                            <td><%= (order_item.tax_price * order_item.amount).to_s(:delimited) %></td>
                            <td>
                                <%= form_with(model: order_item, url: admin_order_item_path(order_item.id), method: :patch, local: true, class: "form-row") do |f| %>
                                    <%= f.select :production_status, OrderItem.production_statuses_i18n.invert, class: "production_status", class:"form-control form-control-sm col-6" %>
                                    <%= f.submit "更新" , class: "btn btn-success ml-5" %>
                                <% end %>
                            </td>
                          </tr>
                        </tbody>
                          <% end %>
                  </table>
                </div>
                <div class="col-3">
                  <table class="table table-borderless">
                      <tbody>
                           <tr>
                               <td><strong>商品合計</strong></td>
                               <td><%= @order.total_payment.to_s(:delimited) %>円</td>
                           </tr>
                           <tr>
                               <td><strong>送料</strong></td>
                               <td><%= @order.postage.to_s(:delimited) %>円</td>
                           </tr>
                           <tr>
                               <td><strong>請求金額合計</strong></td>
                               <td><strong><%= @order.total_paayment_of_billed.to_s(:delimited) %>円</strong></td>
                           </tr>
                      </tbody>
                   </table>
                </div>
               
           </div>
       </div>

  </div>
 </div>