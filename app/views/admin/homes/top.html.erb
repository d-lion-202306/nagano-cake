<div class="container">
  <div class="row">
      <h4 class="bg-light">注文履歴一覧</h4>
      
      <table class ="table">
          <tr class="bg-light">
              <th>購入日時</th>
              <th>購入者</th>
              <th>注文個数</th>
              <th>注文ステータス</th>
          </tr>
          <% @orders.each do |order| %>
          <tr>
              <td>
                  <!--注文履歴詳細へのパス-->
                  <%= link_to admin_order_path(order.id), class="link-dark" do %>
                   <%= order.created_at %>
                  <% end %>
              </td>
              <td><%= order.name %></td>
              <td><%= order.amount %></td>
              <td><%= order.order_status %> </td>
          </tr>
          <% end %>
      </table>
      <%= paginate @orders %>
  </div>
</div>