<div class="container">
  <div class="mt-3 offset-1">
  <h2 class="bg-light d-inline-block">新規会員登録</h2>

<%= form_with model: @customer, url: customer_registration_path do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="mt-2">
    <table>
      <tr>
        <td class="col-4 py-2">名前</td>
        <td class="text-nowrap"><%= f.label :（姓） %>
            <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", placeholder:"令和" %>
            <%= f.label :（名） %>
            <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", placeholder:"道子" %></td>
      </tr>
      <tr>
        <td class="py-2">フリガナ</td>
        <td  class="text-nowrap"><%= f.label :（セイ） %>
            <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", placeholder:"レイワ" %>
            <%= f.label :（メイ） %>
            <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", placeholder:"ミチコ" %></td>
      </tr>
      <tr>
        <td class="py-2"><%= f.label :メールアドレス %></td>
        <td><%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"sample@example.com" %></td>
      </tr>
      <tr>
        <td class="py-2"><%= f.label :郵便番号（ハイフンなし） %></td>
        <td><%= f.text_field :post_code, autofocus: true, autocomplete: "post_code", placeholder:"0000000" %></td>
      </tr>
      <tr>
        <td class="py-2"><%= f.label :住所 %></td>
        <td><%= f.text_field :address, autofocus: true, autocomplete: "address", placeholder:"東京都渋谷区代々木神園町0-0", class:'w-100' %></td>
      </tr>
      <tr>
        <td class="py-2"><%= f.label :電話番号（ハイフンなし） %></td>
        <td><%= f.telephone_field :telephone_number, autofocus: true, autocomplete: "telephone_number", placeholder:"0000000000" %></td>
      </tr>
      <tr>
        <td class="py-2"><%= f.label :パスワード（6文字以上） %></td>
        <td><% if @minimum_password_length %><% end %><%= f.password_field :password, autocomplete: "new-password" %></td>
      </tr>
      <tr>
        <td class="py-2"><%= f.label :パスワード（確認用） %></td>
        <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
      </tr>
      <tr>
        <td class="py-2"></td>
        <td><%= f.submit "新規登録", class:'btn btn-success w-25' %></td>
      </tr>
    </table>
  </div>
  <% end %>

<h4 class="mt-2 bg-light d-inline-block">既に登録済みの方</h4>
 <P class="ml-2"><%= link_to "こちら", new_session_path(resource_name) %>からログインしてください</p>
  </div>
</div>