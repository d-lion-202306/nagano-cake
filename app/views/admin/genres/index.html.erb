<h2>ジャンル一覧・追加</h2>
<% if @genre.errors.any? %>
  <div>
    <%= @genre.errors.count %>errors prohibited this obj form being saved:
     <ul>
     <% @genre.errors.full_messages.each do |message| %>
      <li><%= message %></li>
     <% end %>
     </ul>
  </div>
<% end %>

<%= form_with model: @genre, url: admin_genres_path do |f| %>
  <%= f.label :name, 'ジャンル名' %>
  <%= f.text_field :name %>
  <%= f.submit '新規登録' %>
<% end %>

<table>
  <thead>
    <tr>
      <th>ジャンル名</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td>
          <%= genre.name %>
        </td>
        <td>
          <%= link_to '編集する', edit_admin_genre_path(genre.id) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>