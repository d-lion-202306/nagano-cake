<% if @genre.errors.any? %>
  <div>
    <%= @genre.errors.count %>errors prohibited this obj form being saved:
     <ul>
     <% @genre.errors.full_messages.each do |message| %>
      <li><%= message %></li>
     <% end %>
     </ul>
  </div>
<% end %>
<div class="container mt-5">
  <div class="row">
    <div class="col-lg-7">
      <h4 class="mt-2 bg-light text-center">ジャンル一覧・追加</h4>
      <div class="ml-3">
        <div class="flex-row">
          <%= form_with model: @genre, url: admin_genres_path do |f| %>
            <%= f.label :name, 'ジャンル名' %>
            <%= f.text_field :name %>
            <%= f.submit '新規登録', class:"btn btn-flex align-btn-cnter  btn-x btn-success" %>
          <% end %>
        </div>
      </div>

      <div class="col-md-6">
        <table class="table">
          <thead>
            <tr>
              <th>ジャンル名</th>
              <th></th>
            </tr>
          </thead>

          <tbody>
            <% @genres.each do |genre| %>
              <tr>
                <td>
                  <%= genre.name %>
                </td>
                <td>
                  <%= link_to '編集する', edit_admin_genre_path(genre.id), class:"btn btn-sm btn-block btn-success mt-4" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>