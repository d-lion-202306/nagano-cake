<% if @genre.errors.any? %>
  <div>
    <%= @genre.errors.count %>errors prohibited this obj form being saved:
     <ul>
     <% @genre.errors.full_messages.each do |message| %>
      <li><%= message %></li>
     <% end %>
     </ul>
  </div>
<% end %>

<div class="container mt-5">
  <div class="row">
    <div class="col-lg-7">
      <h4 class="mt-2 bg-light text-center">ジャンル編集</h4>
      <div class="ml-3">
        <div class="flex-row">
          <%= form_with model: @genre, url: admin_genre_path do |f| %>
            <%= f.label :name, 'ジャンル名' %>
            <%= f.text_field :name %>
            <%= f.submit '変更を保存', class:"btn btn-sm  btn-success " %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>