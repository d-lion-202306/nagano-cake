<div class="container">
  <h3 class="bg-light d-inline-block mb-2 mt-5 offset-1 p-1">会員情報編集</h3>
  <!--エラー-->
   <% if @customer.errors.any? %>
   <div>
       <%= @customer.errors.count %>errors prohibited this obj form being saved:
         <ul>
         <% @customer.errors.full_messages.each do |message| %>
           <li><%= message %></li>
         <% end %>
         </ul>
   </div>
  <% end %>
<!--ここまでエラー-->
   <div class="my-3 ml-2">
      <table>
       <%= form_with model: @customer, url: customers_information_path, method: :patch, local: true do |f| %>
        <tr>
          <td class="py-2">氏名</td>
          <td class="col-10 pl-5">
            <%= f.text_field :last_name, autofocus: true, id:"inputLastName", placeholder:"氏" %>
            <%= f.text_field :first_name, autofocus: true, id:"inputFirstName", placeholder:"名", class:"ml-5" %></td>
        </tr>
        <tr>
          <td class="py-2">カナ</td>
          <td class=" pl-5"><%= f.text_field :last_name_kana, autofocus: true, id:"inputLastNameKana", placeholder:"カナ" %>
              <%= f.text_field :first_name_kana, autofocus: true, id:"inputFirstNameKana", placeholder:"カナ", class:"ml-5" %></td>
        </tr>
        <tr>
      　　<td class"py-2">郵便番号</td>
          <td class=" pl-5"><%= f.text_field :post_code, autofocus: true, id:"inputPostCode", placeholder:"0000000" %></td>
        </tr>
        <tr>
          <td class="py-2">住所</td>
          <td class=" pl-5"><%= f.text_field :address, autofocus: true, id:"inputAddress", placeholder:"住所", class:"w-100" %></td>
        </tr>
        <tr>
          <td class="py-2">電話番号</td>
          <td class=" pl-5"><%= f.telephone_field :telephone_number, autofocus: true, id:"inputTelephoneNumber", placeholder:"00000000000" %></td>
        </tr>
        <tr>
          <td class="py-2">メールアドレス</td>
          <td class=" pl-5"><%= f.email_field :email, autofocus: true, id:"inputEmail", placeholder:"sammple@example.com" %></td>
        </tr>
        <tr>
          <td class="py-5"></td>
          <td class=" pl-5"><%= f.submit "編集内容を保存", class:'btn btn-success' %><%= link_to "退会する", customers_confirm_withdraw_path, class:"btn btn-danger offset-1" %></td>
        </tr>
      </table>
      <% end %>
    </div>
</div>
