<h4>注文情報入力</h4>
<p>支払方法</p>
<%= form_with model: @order, url: orders_confirm_path do |f| %>
  <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
  <%= f.label :payment_method, "クレジットカード" %>

  <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
  <%= f.label :payment_method, "銀行振込" %>

<p>お届け先</p>

  <%= f.radio_button :address_number, 1 %>
  <%= f.label :address_number_1, "ご自身の住所" %>
  <%= current_customer.address %><br>
  <%= current_customer.last_name %><%= current_customer.first_name %><br>

  <%= f.radio_button :address_number, 2 %>
  <%= f.label :address_number_2, "登録済住所から選択" %>
  <%= f.collection_select(:registered, current_customer.addresses.all, :id, :address) %><br>

  <%= f.radio_button :address_number, 3 %>
  <%= f.label :address_number_3, "新しいお届け先" %>
  <%= f.label :post_code, "郵便番号(ハイフンなし)" %>
  <%= f.text_field :post_code %><br>
  <%= f.label :address, "住所" %>
  <%= f.text_field :address %><br>
  <%= f.label :address_name, "宛名" %>
  <%= f.text_field :address_name %><br>
  <%= f.submit "確認画面へ進む" %>
<% end %>