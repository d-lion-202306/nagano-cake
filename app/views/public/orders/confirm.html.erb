<div class="container">
  <div class="d-flex">
    <h3 class="my-auto bg-light text-center" style="width:300px">注文情報確認</h3>
  </div>
 <div>
 <table class="table-bordered mt-3">
   <thead>
     <tr>
       <th class="col-4" style="height:50px">商品名</th>
       <th class="col-1">単価（税込）</th>
       <th class="col-1">数量</th>
       <th class="col-1">小計</th>
     </tr>
   </thead>
   <tbody>
    <% @cart_items.each do |cart| %>
    <tr>
      <td>
        <%= cart.item.name %>
      </td>
      <td>
        <%= (cart.item.tax_price).to_s(:delimited) %>
      </td>
      <td>
        <%= cart.amount %>
      </td>
      <td>
        <%= (cart.item.tax_price * cart.amount).to_s(:delimited) %>
      </td>
    </tr>
    <% end %>

<p>ご請求金額</p>
  <%= @total.to_s(:delimited) %>
<p>お届け先</p>
  <%= @order.address %>
<%= @order.post_code %>
<%= form_with model: @order, url: orders_path, method: :post do |f| %>
  <%= f.hidden_field :name %>
  <%= f.hidden_field :address %>
  <%= f.hidden_field :post_code, value: @order.post_code %>
  <%= f.hidden_field :postage, value: @postage %>
  <%= f.hidden_field :total_payment, value: @total %>
  <%= f.hidden_field :payment_method, value: @order.payment_method %>
  <%= f.submit "注文を確定する" %>
<% end %>