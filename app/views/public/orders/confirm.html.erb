<div class="container">
  <h4 class="my-auto bg-light text-center" style="width:300px">注文情報確認</h4>

  <div class="row mt-3">
    <table class="table-bordered col-md-7">
      <thead>
        <tr>
          <th class="col-3" style="height:50px">商品名</th>
          <th class="col-2">単価（税込）</th>
          <th class="col-1">数量</th>
          <th class="col-1">小計</th>
        </tr>
      </thead>
      <tbody>
      <% @cart_items.each do |cart| %>
        <tr>
          <td class="p-1" style="height:60px"><%= image_tag cart.item.get_image, size: "100x50" %><span class="ml-2"><%= cart.item.name %></span></td>
          <td><%= (cart.item.tax_price).to_s(:delimited) %></td>
          <td><%= cart.amount %></td>
          <td><%= (cart.item.tax_price * cart.amount).to_s(:delimited) %></td>
        </tr>
      <% end %>
    </table>
    <div>
    <table class="table-bordered ml-5">
      <tr>
        <th style="height:50px; width:100px">送料</th>
        <th style="width:100px "><%= @postage %></th>
      </tr>
      <tr>
        <th style="height:50px ">商品合計</th>
        <th><%= @total.to_s(:delimited) %></th>
      </tr>
      <tr>
        <th style="height:50px ">請求金額</th>
        <th><%= (@postage + @total).to_s(:delimited) %></th>
      </tr>
    </table>
    </div>
  </div>

  <div class="mt-4">
    <div class="d-flex">
      <p><b>支払方法</b></p>
      <p class="ml-4"><%= @order.payment_method %></p>
    </div>
    <div class="d-flex">
      <p><b>お届け先</b></p>
      <p class="ml-4">〒<%= @order.post_code %>
         <%= @order.address %><br>
         <%= @order.name %> </p>
    </div>
    <div class="offset-5 mt-2">
      <%= form_with model: @order, url: orders_path, method: :post do |f| %>
        <%= f.hidden_field :name %>
        <%= f.hidden_field :address %>
        <%= f.hidden_field :post_code, value: @order.post_code %>
        <%= f.hidden_field :postage, value: @postage %>
        <%= f.hidden_field :total_payment, value: @total %>
        <%= f.hidden_field :payment_method, value: @order.payment_method %>
        <%= f.submit "注文を確定する", class:"btn btn-success" %>
      <% end %>
     </div>
  </div>
</div>