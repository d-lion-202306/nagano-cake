<div class="container">
  <div class="row">
    <h4>注文履歴詳細</h4>
    <div>
      <p>注文情報</p>
      <table class="table">
        <tr>
          <th>注文日</th>
          <th><%= @order.created_at.strftime('%Y/%m/%d') %></th>
        </tr>
        <tr>
          <th>配送先</th>
          <th>
            〒<%= @order.post_code %><br>
            <%= @order.address %><br>
            <%= @order.name %>
          </th>
        </tr>
        <tr>
          <th>支払方法</th>
          <th><%= @order.payment_method %></th>
        </tr>
        <tr>
          <th>ステータス</th>
          <th><%= @order.order_status %></th>
        </tr>
      </table>

      <p>請求情報</p>
      <table class="table">
        <tr>
          <th>商品合計</th>
          <th><%= @order.total_payment.to_s(:delimited) %></th>
        </tr>
        <tr>
          <th>配送料</th>
          <th>800</th>
        </tr>
        <tr>
          <th>ご請求金額</th>
          <th><%= (@order.total_payment + 800).to_s(:delimited) %></th>
        </tr>
      </table>

      <p>注文内容</p>
      <table class="table">
      <% @order.order_items.each do |order_item| %>
        <tr>
          <th>商品</th>
          <th>単価(税込)</th>
          <th>個数</th>
          <th>小計</th>
        </tr>
        <tr>
          <td><%= order_item.item.name %></td>
          <td><%= order_item.tax_price %></td>
          <td><%= order_item.amount %></td>
          <td><%= (order_item.tax_price * order_item.amount).to_s(:delimited) %></td>
        </tr>
      <% end %>
      </table>
    </div>
  </div>
</div>