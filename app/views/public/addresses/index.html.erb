<% if @new_address.errors.any? %>
  <%= @new_address.errors.count %>errors prohibited this obj form being saved:
  <ul>
    <% @new_address.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>


    <h4 class="bg-light d-inline-block my-4 offset-1"><b>配送先登録/一覧</b></h4>
    
    <%= form_with model: @new_address do |f| %>
     <table class="ml-5">
        <tr>
            <td class="col-4 py-2"><%= f.label "郵便番号(ハイフンなし)" %></td>
            <td><%= f.text_field :post_code, autoforcus: true, autocomplete: "post_code",  placeholder: "0000000" %></td>
        </tr>
        <tr>
            <td class="col-4 py-2"><%= f.label "住所" %></td>
            <td><%= f.text_field :address, autocomplete: "address",  placeholder: "東京都渋谷区代々木神園町0-0", size: 50 %></td>
        </tr>
        <tr>
            <td class="col-4 py-2"><%= f.label "宛名" %></td>
            <td><%= f.text_field :name, autocomplete: "name",  placeholder: "令和道子" %></td>
            <td></td>
            <td><%= f.submit '新規登録', class: "btn btn-success" %> </td>
        </tr>
     </table>
     <% end %>
    
    
    <table class="table table-bordered col-5 mt-5 ml-5">
        <thead>
            <tr class="bg-light">
                <th>郵便番号</th>
                <th>住所</th>
                <th>宛名</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <% current_customer.addresses.each do |address| %>
            <%#配送先の一覧表示%>
            <tr>
                <td class="col-1"><%= address.post_code %></td>
                <td class="col-3"><%= address.address %></td>
                <td class="col-1"><%= address.name %></td>
                <%# if @address.customer == current_customer %>
                <td class="col-2 text-center">
                    <%= link_to "編集する", edit_address_path(address.id), class: "btn btn-success" %>
                    <%= link_to "削除する", address_path(address.id), method: :delete, class: "btn btn-danger" %>
                </td>
                <% end %>
            </tr>
            
        </tbody>
        </table>
