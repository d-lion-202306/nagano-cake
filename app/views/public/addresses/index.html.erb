<% if @new_address.errors.any? %>
  <%= @new_address.errors.count %>errors prohibited this obj form being saved:
  <ul>
    <% @new_address.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>


<h4 class="col-4 py-3 bg-light">配送先登録/一覧</h4>

<%= form_with model: @new_address do |f| %>
 <table>
    <tr>
        <td class="col-4 py-3">郵便番号(ハイフンなし)</td>
        <td><%= f.text_field :post_code %></td>
    </tr>
    <tr>
        <td class="col-4 py-3">住所</td>
        <td><%= f.text_field :address %></td>
    </tr>
    <tr>
        <td class="col-4 py-3">宛名</td>
        <td><%= f.text_field :name %></td>
        <td></td>
        <td><%= f.submit '新規登録', class: "btn btn-success" %> </td>
    </tr>
 </table>
 <% end %>


<table class="table table-bordered">
    <thead>
        <tr>
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <% @addresses.each do |address| %>
        <%#配送先の一覧表示%>
        <tr>
            <td><%= address.post_code %></td>
            <td><%= address.address %></td>
            <td><%= address.name %></td>
            <%# if @address.customer == current_customer %>
            <td>
                <%= link_to "編集する", edit_address_path(address.id), class: "btn btn-success" %>
                <%= link_to "削除する", address_path(address.id), method: :delete, class: "btn btn-danger" %>
            </td>
            <% end %>
        </tr>
        
    </tbody>
    </table>